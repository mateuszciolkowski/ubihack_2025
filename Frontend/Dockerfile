# ------------------------------------
# ETAP 1: Budowanie Aplikacji (Build Stage)
# ------------------------------------
FROM node:20-alpine AS build

# Ustawienie katalogu roboczego
WORKDIR /app

# Kopiowanie plik√≥w pakiet√≥w dla lepszego cachowania
COPY package.json ./
COPY package-lock.json ./

# Instalacja zale≈ºno≈õci
RUN npm ci --silent

# Kopiowanie kodu ≈∫r√≥d≈Çowego
COPY . .

# Budowanie aplikacji dla produkcji (wynik w katalogu 'dist')
# W tym kroku nastƒôpuje wbudowanie zmiennej VITE_API_BASE_URL (je≈õli jest podana)
RUN npm run build

# ------------------------------------
# ETAP 2: Produkcja i Serwowanie (Production Stage)
# ------------------------------------
# U≈ºywamy node:20-alpine jako ≈õrodowiska uruchomieniowego
FROM node:20-alpine

# Instalacja 'serve' globalnie
RUN npm install -g serve

# Ustawienie katalogu roboczego
WORKDIR /app

# Kopiowanie zbudowanej aplikacji z etapu 'build'
COPY --from=build /app/dist ./dist

# Tworzenie u≈ºytkownika nie-root (dla bezpiecze≈Ñstwa)
RUN addgroup -S nodejs && adduser -S nodejs -u 1001 nodejs

# Zmiana w≈Ça≈õciciela katalogu aplikacji
RUN chown -R nodejs:nodejs /app

# Prze≈ÇƒÖczenie na u≈ºytkownika nie-root
USER nodejs

# Ustawienie zmiennej ≈õrodowiskowej
ENV NODE_ENV=production

# Wystawienie portu na 5175
EXPOSE 5175 üéØ

# Dodanie Health Check na porcie 5175
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:5175/ || exit 1

# Uruchomienie aplikacji za pomocƒÖ 'serve' na porcie 5175
CMD ["serve", "-s", "dist", "-l", "5175"]